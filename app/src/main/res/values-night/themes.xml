<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.feedbr" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/evilMinionPurple</item>
        <item name="colorPrimaryVariant">@color/evilMinionPurpleAlt</item>
        <item name="colorOnPrimary">@color/black</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/minionYellow</item>
        <item name="colorSecondaryVariant">@color/minionYellowAlt</item>
        <item name="colorOnSecondary">@color/black</item>
        <item name="background">@color/charcoal</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor">?attr/background</item>
        <item name="android:windowLightStatusBar">true</item>
        <item name="android:navigationBarColor">?attr/background</item>
    </style>
</resources>